{
  "name": "webfleet-driver",
  "scripts": {
    "postdeploy": "psql -d $DATABASE_URL -a -f scripts/database.sql"
  },
  "env": {
    "SERVER_PORT": {
      "required": true
    },
    "JDBC_DATABASE_URL": {
      "required": true
    },
    "DATABASE_USER": {
      "required": true
    },
    "DATABASE_PASS": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/scala"
    }
  ]
}
